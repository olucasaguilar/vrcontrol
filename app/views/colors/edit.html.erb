<legend>Editar Cor</legend>

<%= form_with(model: @color) do |f| %>

  <% if @color.errors.any? %>
    <% @color.errors.full_messages.each do |message| %>
      <%# <li><%= message </li> %>
      <% flash[:alert] << message %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label 'Descrição', { class: "col-md-4 control-label"} %>
    <div class="col-md-4 inputGroupContainer">
      <div class="input-group">
        <%= f.text_field :nome, class: "form-control #{f.object.errors[:nome].any? ? 'is-invalid' : ''}", placeholder: "Cor" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label"></label>
    <div class="col-md-4">
      <%= f.submit "Atualizar", class: "btn btn-primary" %>
      <%#= link_to "Excluir", @color, method: :delete, class: "btn btn-danger", data: { confirm: 'Tem certeza que deseja excluir esta cor?' } %>
      <%= link_to "Cancelar", colors_path, class: "btn btn-secondary" %>
    </div>
  </div>

<% end %>
