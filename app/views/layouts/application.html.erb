<!DOCTYPE html>
<html>
  <head>
    <title>Vrcontrol</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <!-- Render navbar -->
    <%= render "shared/navbar" %>
    <div class="container"> <br />
    
      <% if notice %>
        <% if notice.is_a?(Array) %>
          <% notice.each do |message| %>
            <div class="alert alert-success" id="notice">
              <li><%= message %></li>
            </div>
          <% end %>
        <% else %>
          <div class="alert alert-success" id="notice"> <%= notice %> </div>
        <% end %>
        <% flash[:notice] = nil %>
      <% end %>

      <% if alert %>
        <% if alert.is_a?(Array) %>
          <% alert.each do |message| %>
            <div class="alert alert-danger" id="alert">
              <li><%= message %></li>
            </div>
          <% end %>
          <% flash[:alert] = nil %>
        <% else %>
          <div class="alert alert-danger" id="alert"> <%= alert %> </div>
        <% end %>
        <% flash[:alert] = nil %>
      <% end %>

      <% if info %>
        <% if info.is_a?(Array) %>
          <% info.each do |message| %>
            <div class="alert alert-info" id="info">
              <li><%= message %></li>
            </div>
          <% end %>
          <% flash[:info] = nil %>
        <% else %>
          <div class="alert alert-info" id="info"> <%= info %> </div>
        <% end %>
        <% flash[:info] = nil %>
      <% end %>

      <%= yield %>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
