<style>
  #manual-button {
    background-color: #f8f9fa;
    border: 1px solid #dee2e6;
    padding: 5px 10px;
    text-decoration: none;
    color: #495057;
    border-radius: 5px;
    
    position: absolute;
    right: 5%;
  }


  h1 {
    display: inline-block;
    margin-right: 10px;
  }
</style>

<%= javascript_include_tag 'campos_entidade' %>

<h1>Editar Entidade</h1>

<%= link_to 'ajuda', '/assets/Manual-Tecnico-VR-Control.pdf#page=32', id: 'manual-button', target: '_blank' %>

<% flash[:alert] = [] %>
<%= form_for(@entity) do |f| %>

  <%= render 'form', f: f %>

  <div class="form-group">
    <div class="col-md-offset-4 col-md-4">
      <%= f.submit "Atualizar", class: "btn btn-primary" %>
      <%= link_to "Excluir", entity_path(@entity.id), method: :delete, class: "btn btn-danger", data: { confirm: 'Tem certeza que deseja excluir esta entidade?' } %>
      <%= link_to "Cancelar", entity_path(@entity.id), class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>
