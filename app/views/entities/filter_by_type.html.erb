<% if @entities.empty? %>
    <h1>Não existem entidades do tipo <%= @entity_type.nome %></h1>
<% else %>
    <h1>Entidades do tipo <%= @entity_type.nome %></h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Cidade</th>
                <th>Estado</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% @entities.each do |entity| %>
                <tr>
                    <td><%= entity.nome %></td>
                    <td><%= entity.cidade %></td>
                    <td><%= entity.estado %></td>
                    <td>
                        <a href="<%= entity_path(entity.id) %>" class="btn btn-info">Detalhes</a>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% end %>

<a href="<%= new_entity_path(@entity_type.id) %>" class="btn btn-success mt-3">+ Nova Entidade</a>
<a href="<%= entities_by_type_path %>" class="btn btn-secondary mt-3">Voltar</a>
