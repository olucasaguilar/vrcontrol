<h1>Entidades Inativas</h1>

<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <colgroup>
      <col style="width: 3%;">
      <col style="width: 10%;">
      <col style="width: 25%;">
      <col style="width: 13%;">
      <col style="width: 8%;">
      <col style="width: 8%;">
    </colgroup>
    <thead>
      <tr>
        <th>Nº</th>
        <th>Tipo</th>
        <th>Nome</th>
        <th>Cidade</th>
        <th>Estado</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @entidades.each_with_index do |entidade, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= entidade.entity_type.nome %></td>
          <td><%= entidade.nome %></td>
          <td><%= entidade.cidade %></td>
          <td><%= entidade.estado %></td>
          <td>
            <%= link_to 'Detalhes', entity_path(entidade), class: 'btn btn-info' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'Voltar para Entidades', entidades_path, class: 'btn btn-secondary' %>
