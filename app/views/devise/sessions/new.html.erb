<style>
  #manual-button {
    background-color: #f8f9fa;
    border: 1px solid #dee2e6;
    padding: 5px 10px;
    text-decoration: none;
    color: #495057;
    border-radius: 5px;
    
    position: absolute;
    right: 5%;
  }
</style>

<div class="container py-5 h-100">
  <div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col col-xl-10">
      <div class="card" style="border-radius: 1rem;">
        <div class="row g-0">
          <div class="col-md-6 col-lg-5 d-none d-md-block">
            <img src="/assets/login.png"
              alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
          </div>
          <div class="col-md-6 col-lg-7 d-flex align-items-center">
            <div class="card-body p-4 p-lg-5 text-black">
              
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="d-flex align-items-center mb-3 pb-1">
                  <i class="fas fa-cubes fa-2x me-3" style="color: rgb(7, 105, 185);"></i>
                  <span class="h1 fw-bold mb-0">VRControl</span>
                </div>

                <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Fa√ßa login com suas credenciais</h5>

                <div class="form-outline mb-4">
                  <%= f.label :name, class: "form-label" %>
                  <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control form-control-lg" %>
                </div>

                <div class="form-outline mb-4">
                  <%= f.label :password, class: "form-label" %>
                  <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg" %>
                </div>

                <% if devise_mapping.rememberable? %>
                  <div class="form-outline mb-4">
                    <%= f.check_box :remember_me, class: "form-label" %>
                    <%= f.label :remember_me %>
                  </div>
                <% end %>

                <div class="pt-1 mb-0">
                  <%= f.submit "Login", class: "btn btn-dark btn-lg btn-block" %>
                  <%= link_to 'ajuda', '/assets/Manual-Tecnico-VR-Control.pdf#page=15', id: 'manual-button', target: '_blank' %>
                </div>
              <% end %>

              <%#= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
