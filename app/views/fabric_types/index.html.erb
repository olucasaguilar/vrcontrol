<h1 class="mb-4">Tipos de Tecido</h1>

<table class="mb-4 table table-striped table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @fabric_types.each do |fabric_type| %>
      <tr>
        <td><%= fabric_type.id %></td>
        <td><%= fabric_type.nome %></td>
        <td>
          <%= link_to 'Editar', edit_fabric_type_path(fabric_type), class: "btn btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="mb-3">
  <%= link_to "+ Novo Tipo de Tecido", new_fabric_type_path, class: "btn btn-success" %>
  <%= link_to "Voltar", cadastros_extras_path, class: "btn btn-secondary" %>
</div>
