<% @vendedores = [
  'Vendedores do Sul',
  'Vendas Inteligentes Ltda.',
  'Vendedores Experientes S.A.',
  'Vendas Estratégicas',
  'Vendedores Eficazes Ltda.',
  'Vendedores do Norte'
] %>

<h1>Venda - Saída</h1>

<form class="mt-4">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Vendedor<span class="required">*</span></th>
        <th>Data e Hora</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <select class="form-select">
            <option selected class="form-control">Selecione um Vendedor</option>
            <% @vendedores.each do |vendedor| %>
              <option value="<%= vendedor %>"><%= vendedor %></option>
            <% end %>
          </select>
        </td>
        <td><input type="datetime-local" name="data_hora" class="form-control"></td>
      </tr>
    </tbody>
  </table>
</form>

<% @colors = [
  'Preto',
  'Branco',
  'Vermelho',
  'Azul',
  'Amarelo',
  'Verde',
  'Rosa',
  'Laranja',
  'Roxo'
]

@garment_types = ['Camiseta', 'Calça', 'Bermuda'] %>

<form>
  <div class="input-group mb-3" style="width: 50%;">
    <span class="input-group-text">Total (peças)</span>
    <input type="text" id="valor-total-peso" class="form-control" value="60" readonly>
    <span class="input-group-text"></span>
  </div>
  
  <div class="form-group mb-3">
    <button type="button" id="add-field-button" class="btn btn-primary">Mais um Tipo de Peça</button>
    <input type="submit" value="Finalizar" class="btn btn-success">
    <a href="#" class="btn btn-secondary">Voltar</a>
  </div>

  <table class="mb-4 table table-bordered">
    <thead>
      <tr>
        <th>Nº</th>
        <th>Tipo de Peça*</th>
        <th>Quantidade (peças)*</th>
        <th>Ação</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>1</td>
        <td>
          <select class="form-select">
            <option value="">Selecione um tipo...</option>
            <% @garment_types.each do |garment_type| %>
              <option value="<%= garment_type %>"><%= garment_type %></option>
            <% end %>
          </select>
        </td>
        <td>
          <input type="text" class="form-control" value="60">
        </td>
        <td>
          <button type="button" class="btn btn-danger remove-row-button" disabled>Remover</button>
        </td>
      </tr>                
    </tbody>
  </table>  
</form>
