<legend>Novo Tipo de Entidade</legend>

<%= form_with(model: @entity_type) do |f| %>

  <% if @entity_type.errors.any? %>
    <% @entity_type.errors.full_messages.each do |message| %>
      <% flash[:alert] << message %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label 'Descrição*', { class: "col-md-4 control-label"} %>
    <div class="col-md-4 inputGroupContainer">
      <div class="input-group">
        <%= f.text_field :nome, class: "form-control #{f.object.errors[:nome].any? ? 'is-invalid' : ''}", placeholder: "Tipo de Entidade", required: true %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label"></label>
    <div class="col-md-4">
      <%= f.submit "Criar", class: "btn btn-primary" %>
      <%= link_to "Cancelar", entity_types_path, class: "btn btn-secondary" %>
    </div>
  </div>
  
<% end %>
