<%= form_tag admin_update_path, method: :post do %>
  <div class="form-group">
    <%= label_tag :name, "Nome", class: "col-md-4 control-label" %>
    <div class="col-md-4 inputGroupContainer">
      <%= text_field_tag :name, @user.name, class: "form-control" %>
    </div>
  </div><br >
  
  <div class="form-group">
    <%= label_tag :entities, "Entidades", class: "col-md-4 control-label" %>
    <div class="col-md-4 inputGroupContainer">
      <%= check_box_tag :entities, "1", @user.user_permission.entities %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :entities_create, "Gerenciar Entidade", class: "col-md-4 control-label" %>
    <div class="col-md-4 inputGroupContainer">
      <%= check_box_tag :entities_create, "1", @user.user_permission.entities_create %>
    </div>
  </div><br >

  <%= submit_tag "Salvar", class: "btn btn-primary" %>
<% end %><br >

