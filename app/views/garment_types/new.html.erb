<legend>Novo Tipo de Roupa</legend>

<%= form_with(model: @garment_type) do |f| %>

  <% if @garment_type.errors.any? %>
    <div class="alert alert-danger">
      <% @garment_type.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Descrição', { class: "col-md-4 control-label"} %>
    <div class="col-md-4 inputGroupContainer">
      <div class="input-group">
        <%= f.text_field :nome, class: "form-control", placeholder: "Tipo de Roupa" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label"></label>
    <div class="col-md-4">
      <%= f.submit "Salvar", class: "btn btn-primary" %>
      <%= link_to "Cancelar", garment_types_path, class: "btn btn-secondary" %>
    </div>
  </div>
  
<% end %>