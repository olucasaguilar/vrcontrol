<h1>Estoque de Peças</h1>

<!-- Tabela para botões e campos de filtro -->
<table class="table table-bordered">
  <thead>
    <tr>
      <th>
        <div class="form-group">
          <label for="tipo_peca">Tipo de Peça:</label>
          <select class="form-control" id="tipo_peca">
            <option value="">Todos</option>
            <% @garment_stocks_groups.each do |(tipo, costurada, estampada), garment_stock| %>
              <option value="<%= garment_stock.last.tipo_peca.nome %>"><%= garment_stock.last.tipo_peca.nome %></option>
            <% end %>
          </select>
        </div>
      </th>
      <th colspan="3"></div>
    </tr>
    <tr>
      <th>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="costurada_filter" checked>
          <label class="form-check-label" for="costurada_filter">
            Costurada
          </label>
        </div>
      </th>
      <th>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="estampada_filter" checked>
          <label class="form-check-label" for="estampada_filter">
            Estampada
          </label>
        </div>
      </th>
    </tr>
  </thead>
</table>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Tipo de Peça <i class="fas fa-caret-up"></i></th>
      <th>Costurada <i class="fas fa-caret-up"></i></th>
      <th>Estampada <i class="fas fa-caret-up"></i></th>
      <th>Quantidade <i class="fas fa-caret-up"></i></th>
      <th>Ultima Atualização <i class="fas fa-caret-up"></i></th>
    </tr>
  </thead>
  <tbody>
    <% @garment_stocks_groups.each do |(tipo, costurada, estampada), garment_stock| %>
      <tr>
        <td><%= garment_stock.last.tipo_peca.nome %></td>
        <td><%= garment_stock.last.costurada ? "Sim" : "Não" %></td>
        <td><%= garment_stock.last.estampada ? "Sim" : "Não" %></td>
        <td><%= garment_stock.last.saldo %></td>
        <td><%= garment_stock.last.data_hora %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- Paginação fictícia -->
<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <li class="page-item disabled">
      <span class="page-link">Anterior</span>
    </li>
    <li class="page-item active" aria-current="page">
      <span class="page-link">1</span>
    </li>
    <li class="page-item">
      <a class="page-link" href="#">2</a>
    </li>
    <li class="page-item">
      <a class="page-link" href="#">3</a>
    </li>
    <li class="page-item">
      <a class="page-link" href="#">Próximo</a>
    </li>
  </ul>
</nav>

<!-- Botão de Impressão -->
<button class="btn btn-secondary" style="float: right;">Imprimir</button>
