<legend>Editar Tamanho de Roupa</legend>

<%= form_with(model: @garment_size) do |f| %>

  <% if @garment_size.errors.any? %>
    <div class="alert alert-danger">
      <% @garment_size.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Descrição', { class: "col-md-4 control-label"} %>
    <div class="col-md-4 inputGroupContainer">
      <div class="input-group">
        <%= f.text_field :nome, class: "form-control #{f.object.errors[:nome].any? ? 'is-invalid' : ''}", placeholder: "Tamanho de Roupa" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label"></label>
    <div class="col-md-4">
      <%= f.submit "Atualizar", class: "btn btn-primary" %>
      <%= link_to "Excluir", @garment_size, method: :delete, class: "btn btn-danger", data: { confirm: 'Tem certeza que deseja excluir este tamanho de roupa?' } %>
      <%= link_to "Cancelar", garment_sizes_path, class: "btn btn-secondary" %>
    </div>
  </div>

<% end %>
